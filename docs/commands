- docker build -t my-image . # build the docker image in the current path
- docker image ls # list docker images
- docker image rm [id|name] # remove image
- docker run -p 3000:5000 -d --name my-container my-image # run a container from image called 'image-name'
- docker ps # list running docker containers
- docker exec -it my-container bash # logging to the container server